#include<bits/stdc++.h>
using namespace std;
#define lli long long int
int main(){
   lli t, n;
   cin >> t;
   while(t--){
        cin >> n;
        lli res = 0 ;
        for(lli i = 1 ; i <= n/2 ; i++){
            res += (2 *i + 1) * i ;
             res += (2 *i + 1) * i ;


            res += (2 *i + 1 - 2) * i ;
            res += (2 *i + 1 - 2) * i ; 
        }
        cout << res << endl ;
   }
}
